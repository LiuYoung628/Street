<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">

            <gradient
                android:startColor="#757575"
                android:endColor="#757575"
                android:angle="0" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <gradient
                android:startColor="#40c3ed"
                android:endColor="#40c3ed"
                android:angle="0" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>
