<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                fresco:actualImageScaleType="fitXY"
                android:id="@+id/sd_bgAvatar"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mask_newprofile"
                android:scaleType="fitXY"
                android:layout_marginBottom="96dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sd_avatar"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    fresco:placeholderImage="@drawable/ly"
                    fresco:roundAsCircle="true"/>

                <LinearLayout
                    android:layout_below="@+id/sd_avatar"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textSize="24sp"
                        android:textColor="#1a1a1a"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:id="@+id/ll_profile"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_schoolName"
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SCHOOL"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" · "/>

                        <TextView
                            android:id="@+id/tv_college"
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COLLEGE"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" · "/>

                        <TextView
                            android:id="@+id/tv_major"
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MAJOR"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_location"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_location_newprofile"/>

                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_marginLeft="3dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"/>

                        <TextView
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="km"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_wave"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/iv_lb_press">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wave"
                                android:id="@+id/imageView6" />

                            <TextView
                                android:textColor="#323232"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="挥手"
                                android:layout_marginLeft="3dp"
                                android:layout_alignTop="@+id/imageView6"
                                android:layout_toRightOf="@+id/imageView6"
                                android:layout_toEndOf="@+id/imageView6" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_letter"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/iv_lb_press">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/letter"
                                android:id="@+id/imageView5" />

                            <TextView
                                android:textColor="#323232"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="写信"
                                android:layout_marginLeft="3dp"
                                android:layout_alignTop="@+id/imageView5"
                                android:layout_toRightOf="@+id/imageView5"
                                android:layout_toEndOf="@+id/imageView5" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"/>

                    <LinearLayout
                        android:id="@+id/ll_lastTime"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="最后激活"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_lastTime"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_status"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="状态        "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_status"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_age"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="年龄        "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_age"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_constellation"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="星座        "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_constellation"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_hometown"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="家乡        "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_hometown"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_about"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="自介        "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_about"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"/>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="感情状况"/>

                    <LinearLayout
                        android:id="@+id/ll_loveStatus"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="恋爱状态"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_lovestatus"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sexOrientation"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="性取向    "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_SexualOrientation"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_lookingfor"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="正在寻找"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_lookingfor"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_meetingUpFor"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="喜欢见面"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="44dp"
                            android:id="@+id/tv_meetingUpFor"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"/>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:textSize="16sp"
                        android:textColor="#323232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兴趣爱好"/>

                    <LinearLayout
                        android:id="@+id/ll_music"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="喜欢的专辑"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <RelativeLayout
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="6dp"
                            android:paddingTop="6dp"
                            android:id="@+id/rl_music"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_book"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="喜欢的书籍"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <RelativeLayout
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="6dp"
                            android:paddingTop="6dp"
                            android:id="@+id/rl_book"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_movie"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="喜欢的电影/电视"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <RelativeLayout
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="6dp"
                            android:paddingTop="6dp"
                            android:id="@+id/rl_movie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_gym"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="健身房"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#646464"/>

                        <TextView
                            android:textColor="#323232"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NA"
                            android:layout_marginLeft="72dp"
                            android:id="@+id/tv_gymName"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_margin="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/imageview_close_press"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imageview_skip_press"/>

        <ImageView
            android:id="@+id/iv_like"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imageview_like_press"/>

    </LinearLayout>

</RelativeLayout>