<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:padding="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sd_avatar"
                android:layout_height="120dp"
                android:layout_width="120dp"
                fresco:roundAsCircle="true"/>

        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_name"
                android:gravity="center|left"
                android:textColor="#22292c"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_school"
                android:gravity="center|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:id="@+id/tv_college"
                android:gravity="center|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_major"
                android:gravity="center|left"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginRight="30dp"
                android:visibility="visible"
                android:id="@+id/ll_wechat"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="wechat"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_wechat"
                    android:layout_marginLeft="12dp"
                    />

            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:background="?android:attr/listDivider"/>
            <RelativeLayout
                android:layout_marginRight="30dp"

                android:id="@+id/ll_telnumber"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="phone"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_telnumber"
                    android:layout_marginLeft="12dp"
                    />



            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>
            <RelativeLayout
                android:layout_marginRight="30dp"

                android:id="@+id/ll_status"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="状态"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_status"
                    android:layout_marginLeft="12dp"
                    />



            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>
            <RelativeLayout
                android:layout_marginRight="30dp"

                android:id="@+id/ll_loveStatus"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="恋爱状态"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_loveStatus"
                    android:layout_marginLeft="12dp"
                    />



            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>
            <RelativeLayout
                android:layout_marginRight="30dp"

                android:id="@+id/ll_sexorientation"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="性取向"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_SexualOrientation"
                    android:layout_marginLeft="12dp"
                    />



            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>
            <RelativeLayout
                android:layout_marginRight="30dp"
                android:id="@+id/ll_lookingfor"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="正在寻找"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lookingfor"
                    android:layout_marginLeft="12dp"
                    />



            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>
            <RelativeLayout
                android:layout_marginRight="30dp"
                android:id="@+id/ll_meetingUpFor"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="喜欢见面"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_meetingUpFor"
                    android:layout_marginLeft="12dp"
                    />

            </RelativeLayout>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>

            <RelativeLayout
                android:layout_marginRight="30dp"
                android:id="@+id/ll_year"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="入学年"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_year"
                    android:layout_marginLeft="12dp"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>

            <RelativeLayout
                android:layout_marginRight="30dp"
                android:id="@+id/ll_hometown"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="家乡"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:textColor="#1a1a1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_hometown"
                    android:layout_marginLeft="12dp"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/v_divider"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:visibility="visible"
                android:background="?android:attr/listDivider"/>

            <RelativeLayout
                android:id="@+id/ll_about"
                android:visibility="visible"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#22292c"
                    android:text="自介"/>

                <TextView
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_about"
                    android:textColor="#22292c"
                    android:layout_marginLeft="60dp"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
