<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sd_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            fresco:roundedCornerRadius="8dp"
            fresco:roundingBorderColor="#22292c"
            fresco:placeholderImage="@drawable/pic"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_toRightOf="@+id/sd_avatar"
            android:id="@+id/sd_second"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            fresco:roundedCornerRadius="8dp"
            fresco:roundingBorderColor="#22292c"
            fresco:placeholderImage="@drawable/pic"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_below="@+id/sd_avatar"
            android:id="@+id/sd_third"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            fresco:roundedCornerRadius="8dp"
            fresco:roundingBorderColor="#22292c"
            fresco:placeholderImage="@drawable/pic"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_toRightOf="@+id/sd_third"
            android:layout_below="@+id/sd_avatar"
            android:id="@+id/sd_fourth"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            fresco:roundedCornerRadius="8dp"
            fresco:roundingBorderColor="#22292c"
            fresco:placeholderImage="@drawable/pic"/>

        </RelativeLayout>

</ScrollView>
